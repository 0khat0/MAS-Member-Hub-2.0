# Database Configuration
DATABASE_URL=postgresql://<username>:<password>@<host>:<port>/<database>

# Redis Configuration (optional, for caching)
REDIS_URL=redis://<host>:<port>

# Environment
ENVIRONMENT=development

# Security
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com
ALLOWED_ORIGINS=http://localhost:5173, https://your-frontend-domain.vercel.app
JWT_SECRET=<your-jwt-secret-key>

# Logging
LOG_LEVEL=INFO

# Rate Limiting
RATE_LIMIT_ENABLED=true

# Production specific
# For Railway deployment, these will be automatically set:
# DATABASE_URL=postgresql://... (provided by Railway)
# REDIS_URL=redis://... (provided by Railway)
# PORT=... (provided by Railway)

# Example production values:
# ENVIRONMENT=production
# ALLOWED_HOSTS=your-backend-domain.railway.app
# ALLOWED_ORIGINS=https://your-frontend-domain.vercel.app
# LOG_LEVEL=WARNING 

# Email
# Optional Resend API for sending OTP emails; otherwise falls back to console logging
RESEND_API_KEY=<your-resend-api-key>
# Use a verified domain for better deliverability (avoid localhost or unverified domains)
# For testing, you can use: EMAIL_FROM="MAS Hub <onboarding@resend.dev>"
EMAIL_FROM="MAS Hub <noreply@yourdomain.com>"

# Public URL for backend (used in emails for absolute links)
# Example: https://your-backend.railway.app
BACKEND_PUBLIC_URL=